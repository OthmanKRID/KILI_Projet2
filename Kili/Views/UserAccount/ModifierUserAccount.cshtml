@model Kili.ViewModels.UserAccountViewModel

@{
    Layout = "_Layout";
    ViewBag.Title = "Mon profil";
}

 @using (Html.BeginForm())
    {
        <fieldset>
            <legend>Modifier votre compte utilisateur </legend><br />
            @Html.LabelFor(m => Model.UserAccount.UserName)
            @Html.TextBoxFor(m => Model.UserAccount.UserName)
            @Html.ValidationMessageFor(m => Model.UserAccount.UserName)
            <br /><br />
            @Html.LabelFor(m => Model.UserAccount.Password)
            @Html.TextBoxFor(m => Model.UserAccount.Password)
            @Html.ValidationMessageFor(m => Model.UserAccount.Password)
            <br /><br />
            @Html.LabelFor(m => Model.UserAccount.Mail)
            @Html.TextBoxFor(m => Model.UserAccount.Mail)
            @Html.ValidationMessageFor(m => Model.UserAccount.Mail)
            <br /><br />
            @Html.HiddenFor(m=>Model.UserAccount.Id)
            <input type="submit" value="Modifier" />
        </fieldset>
    }

    <script type="text/javascript" src="~/Scripts/jquery-3.3.1.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.validate-vsdoc.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.validate.unobtrusive.js"></script>